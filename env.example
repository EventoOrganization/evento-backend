# ===========================================
# üöÄ EVENTO BACKEND - ENVIRONMENT VARIABLES
# ===========================================

# ===========================================
# üåê SERVER CONFIGURATION
# ===========================================
NODE_ENV=development
PORT=8080
CLIENT_URL=http://localhost:3000

# ===========================================
# üóÑÔ∏è DATABASE
# ===========================================
MONGO_URI=mongodb://localhost:27017/evento_db

# ===========================================
# üîê AUTHENTICATION & SECURITY
# ===========================================
JWT_SECRET_KEY=your-super-secret-jwt-key-here

# ===========================================
# üí≥ STRIPE CONFIGURATION
# ===========================================
# Stripe Secret Key (sk_test_... for test, sk_live_... for production)
STRIPE_SECRET=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (whsec_...)
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Platform fee rate (percentage as decimal, e.g., 0.05 for 5%)
PLATEFORM_FEE_RATE=0.05

# ===========================================
# üìß EMAIL SERVICES
# ===========================================
# Mailjet Configuration
MJ_APIKEY_PUBLIC=your_mailjet_public_key
MJ_APIKEY_PRIVATE=your_mailjet_private_key
MJ_FROM_EMAIL=noreply@yourdomain.com

# AWS SES Configuration (alternative to Mailjet)
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
SES_NO_REPLY_INVITATIONS=noreply-invitations@yourdomain.com
SES_NO_REPLY_OTP=noreply-otp@yourdomain.com
SES_BIRTHDAY=birthday@yourdomain.com
SES_REMINDER=reminder@yourdomain.com
SES_NO_REPLY_MESSAGES=noreply-messages@yourdomain.com

# SMTP Configuration (alternative email service)
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_email_password
EMAIL_FROM=noreply@yourdomain.com

# ===========================================
# ‚òÅÔ∏è AWS S3 STORAGE
# ===========================================
S3_BUCKET_NAME=your-s3-bucket-name

# ===========================================
# üîî PUSH NOTIFICATIONS
# ===========================================
NEXT_PUBLIC_VAPID_PUBLIC_KEY=your_vapid_public_key
VAPID_PRIVATE_KEY=your_vapid_private_key

# ===========================================
# üì± TWILIO (SMS) - OPTIONAL
# ===========================================
# TWILIO_ACCOUNT_SID=your_twilio_account_sid
# TWILIO_AUTH_TOKEN=your_twilio_auth_token
# TWILIO_PHONE_NUMBER=+1234567890

# ===========================================
# üó∫Ô∏è GOOGLE SERVICES
# ===========================================
# Google OAuth (if using Google login)
# GOOGLE_CLIENT_ID=your_google_client_id
# GOOGLE_CLIENT_SECRET=your_google_client_secret

# ===========================================
# üìä GOOGLE SHEETS (OPTIONAL)
# ===========================================
# GOOGLE_SHEETS_CREDENTIALS=path_to_google_credentials.json

# ===========================================
# üîç DEBUGGING & LOGGING
# ===========================================
# Set to 'true' to enable detailed logging
DEBUG=false

# ===========================================
# üåç CORS CONFIGURATION
# ===========================================
# Comma-separated list of allowed origins
ALLOWED_ORIGINS=http://localhost:3000,https://yourdomain.com
