{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",
    "rootDir": "./",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "allowJs": true,
    "checkJs": false,
    "noEmit": false,
    "typeRoots": ["./types/global", "./node_modules/@types"]
  },
  "include": ["**/*.ts", "**/*.js", "config/env.ts", "types/**/*.d.ts"],
  "exclude": ["node_modules", "dist"]
}
